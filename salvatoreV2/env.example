#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'
app.indexPage = ''

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = salvatore_v2
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# COOKIE
#--------------------------------------------------------------------

cookie.prefix = ''
cookie.expires = 0
cookie.path = '/'
cookie.domain = ''
cookie.secure = false
cookie.httponly = false
cookie.raw = false
cookie.samesite = 'Lax'

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

encryption.driver = OpenSSL
encryption.blockSize = 16
encryption.digest = SHA512

#--------------------------------------------------------------------
# HONEYPOT
#--------------------------------------------------------------------

honeypot.hidden = 'true'
honeypot.label = 'Fill This Field'
honeypot.name = 'honeypot'
honeypot.template = '<label>{label}</label><input type="text" name="{name}" value=""/>'
honeypot.container = '<div style="display:none">{template}</div>'

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

security.csrfProtection = 'cookie'
security.tokenName = 'csrf_token_name'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_name'
security.expire = 7200
security.regenerate = true
security.redirect = false
security.samesite = 'Lax'

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.cookieName = 'ci_session'
session.expiration = 7200
session.savePath = null
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4

#--------------------------------------------------------------------
# APP CONFIG
#--------------------------------------------------------------------

app.appTimezone = 'America/New_York'
app.charset = 'UTF-8'
app.forceGlobalSecureRequests = false

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------

cache.handler = 'dummy'
cache.backup = 'file'
cache.storePath = WRITEPATH . 'cache/'
cache.cacheDefaultExpire = 300
cache.cachePrefix = 'ci_cache_'
cache.cacheQueryString = false
cache.cacheIncludeAPC = false
cache.cacheIncludeMemcached = false
cache.cacheIncludeRedis = false
cache.cacheIncludeWincache = false
cache.cacheIncludeZend = false

#--------------------------------------------------------------------
# EMAIL
#--------------------------------------------------------------------

email.protocol = 'mail'
email.SMTPHost = ''
email.SMTPUser = ''
email.SMTPPass = ''
email.SMTPPort = 587
email.SMTPTimeout = 5
email.SMTPKeepAlive = false
email.SMTPCrypto = 'tls'
email.mailType = 'text'
email.charset = 'UTF-8'
email.validate = false
email.priority = 3
email.CRFLF = "\r\n"
email.newline = "\r\n"
email.BCCBatchMode = false
email.BCCBatchSize = 200
email.DS = "\r\n"

#--------------------------------------------------------------------
# DATABASE TESTS
#--------------------------------------------------------------------

database.tests.hostname = '127.0.0.1'
database.tests.database = ':memory:'
database.tests.username = ''
database.tests.password = ''
database.tests.DBDriver = 'SQLite3'
database.tests.DBPrefix = 'db_'
database.tests.port = 3306

#--------------------------------------------------------------------
# DOCUMENTATION
#--------------------------------------------------------------------

documentation.docsURL = 'https://codeigniter4.github.io/userguide/'
documentation.docsVersion = '4.0'

#--------------------------------------------------------------------
# FORMATTER
#--------------------------------------------------------------------

format.ignore = []
format.indent = 4
format.lineEnding = "\n"

#--------------------------------------------------------------------
# MIGRATIONS
#--------------------------------------------------------------------

migrations.enabled = true
migrations.table = 'migrations'
migrations.path = 'Database/Migrations/'

#--------------------------------------------------------------------
# SEEDS
#--------------------------------------------------------------------

seeds.path = 'Database/Seeds/'

#--------------------------------------------------------------------
# VALIDATION
#--------------------------------------------------------------------

validation.ruleSets = []
validation.templates = []

#--------------------------------------------------------------------
# VIEWS
#--------------------------------------------------------------------

views.filters = []
views.plugins = []

#--------------------------------------------------------------------
# CORS
#--------------------------------------------------------------------

cors.allowedOrigins = ['*']
cors.allowedOriginsPatterns = []
cors.allowedMethods = ['*']
cors.allowedHeaders = ['*']
cors.exposedHeaders = []
cors.maxAge = 0
cors.supportCredentials = false 